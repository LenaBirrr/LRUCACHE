<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<!--
    This configuration file was written by the eclipse-cs plugin configuration editor
-->
<!--
    Checkstyle-Configuration: CTP
    Description: none
-->
<module name="Checker">
    <property name="severity" value="error"/>
    <property name="charset" value="UTF-8" />

    <!-- Check style suppression, the path pointed by value is relative to the project root directory -->
    <module name="SuppressionFilter">
        <property name="file" value="scripts/suppressions.xml"/>
    </module>

    <!-- Length check -->
    <module name="LineLength">
        <property name="max" value="150"/>
        <property name="tabWidth" value="4"/>
    </module>

    <!--Supports ignoring specific warnings and using the annotation @SuppressWarnings to ignore warnings-->
    <module name="SuppressWarningsFilter">
        <!--<property name="ignoreUnused" value="true"/>-->
        <!--<property name="ignoreUndeclared" value="true"/>-->
        <!--<property name="ignoreNull" value="true"/>-->
    </module>

    <module name="TreeWalker">
        <!--SuppressionCommentFilter ignores warning messages in specific comment formats. Use OFF and ON packages in the following format. Note that it must be capitalized -->
        <!--//CHECKSTYLE:OFF-->
        <!--The middle is the code that originally failed to pass checkstyle verification-->
        <!--//CHECKSTYLE:ON-->
        <module name="SuppressionCommentFilter"/>
        <!--Used with SuppressWarningsFilter, if there is no SuppressWarningsHolder configuration, SuppressWarningsFilter will not take effect-->
        <module name="SuppressWarningsHolder" />
        <module name="JavadocMethod">
            <!--<property name="suppressLoadErrors" value="true"/>-->
            <!--<property name="allowUndeclaredRTE" value="true"/>-->
            <!--<property name="allowMissingPropertyJavadoc" value="true"/>-->
        </module>
        <module name="MissingJavadocMethod" />
        <module name="NonEmptyAtclauseDescription" />
        <module name="JavadocVariable"/>
        <module name="JavadocStyle">
            <property name="checkEmptyJavadoc" value="true" />
            <property name="checkFirstSentence" value="false" />
            <property name="checkHtml" value="false" />
            <message key="javadoc.missing" value="Blank comment, please make sure there is at least one line of pure Chinese function description comment in the comment"/>
        </module>
        <module name="JavadocType">
            <property name="scope" value="public" />
            <property name="allowMissingParamTags" value="true" />
            <property name="allowUnknownTags" value="true" />
            <property name="authorFormat" value="[\\一-\\龥]" />
            <message key="javadoc.missing" value="Class annotation: Javadoc annotation is missing. Or the author format is not annotated according to @author + Chinese name"/>
        </module>
        <module name="AnnotationUseStyle">
            <property name="elementStyle" value="ignore" />
            <property name="trailingArrayComma" value="ignore" />
            <property name="closingParens" value="ignore" />
        </module>
        <module name="AvoidStarImport">
            <property name="severity" value="error"/>
            <message key="import.avoidStar" value="Please do not use ''.*'' to import - {0}."/>
        </module>
        <!--module name="MultipleStringLiterals"/-->
        <!--module name="MultipleVariableDeclarations"/-->
        <module name="NestedTryDepth">
            <property name="max" value="3"/>
        </module>
        <!-- The clone method must call super.clone() -->
        <!--module name="SuperClone"/-->
        <!-- finalize must call super.finalize() -->
        <!--module name="SuperFinalize"/-->
        <!-- The switch must have default -->
        <module name="DefaultComesLast"/>
        <!--module name="ParameterNumber">
          <message key="maxParam" value="Too many parameters, a total of {1,number,integer}, it is best not to exceed {0,number,integer}."/>
        </module-->
        <!-- Class name (class or interface) check -->
        <module name="TypeName" />
        <!-- Checking variables -->
        <module name="MemberName" />
        <!-- Method name checking -->
        <module name="MethodName" />
        <!-- Checking of constant names -->
        <module name="ConstantName" />
        <module name="MethodLength">
            <property name="tokens" value="METHOD_DEF" />
            <property name="max" value="150" />
        </module>
        <!-- The number of parameters of the method should not exceed 3. -->
        <module name="ParameterNumber">
            <property name="max" value="15" />
        </module>
        <module name="EmptyBlock"/>
        <module name="EmptyStatement"/>
        <module name="InnerAssignment"/>
        <!-- Use braces in all fields. -->
        <module name="NeedBraces" />
        <module name="UpperEll">
            <metadata name="net.sf.eclipsecs.core.comment" value="Use uppercase L, l and 1 are too similar"/>
            <property name="severity" value="error"/>
        </module>
        <module name="NestedIfDepth">
            <property name="max" value="3" />
        </module>
        <module name="NestedTryDepth">
            <property name="max" value="3" />
        </module>
        <module name="NestedForDepth">
            <property name="max" value="3" />
        </module>
        <!-- Multiple declarations cannot be present on the same line -->
        <module name="MultipleVariableDeclarations" />
        <!--module name="ParameterNumber">
          <property name="severity" value="error"/>
        </module-->
        <!--module name="CyclomaticComplexity"/-->
        <module name="StringLiteralEquality">
            <metadata name="net.sf.eclipsecs.core.comment" value="Please use equals"/> for String comparisons
            <property name="severity" value="error"/>
            <message key="string.literal.equality" value="Please use equals() for String comparison, instead of ''{0}''."/>
        </module>
        <module name="ParameterAssignment">
            <metadata name="net.sf.eclipsecs.core.comment" value="Value assignment is not allowed for method parameters"/>
            <property name="severity" value="error"/>
            <message key="parameter.assignment" value="Please do not assign values to method parameters:''{0}''"/>
        </module>
        <!--module name="ModifiedControlVariable">
          <metadata name="net.sf.eclipsecs.core.comment" value="Modification of loop control variables is not allowed"/>
          <property name="severity" value="error"/>
        </module-->
        <!--module name="ReturnCount">
          <metadata name="net.sf.eclipsecs.core.comment" value="The method allows up to 3 returns"/>
          <property name="severity" value="error"/>
          <property name="max" value="4"/>
        </module-->
    </module>
    <module name="RegexpSingleline">
        <metadata name="net.sf.eclipsecs.core.comment" value="System.out.print is not allowed"/>
        <property name="severity" value="error"/>
        <property name="format" value="System\.out\.print"/>
        <property name="message" value="System.out.print is not allowed, please use log output"/>
    </module>
</module>